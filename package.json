{
  "name": "sr-igncp",
  "version": "0.0.6",
  "description": "Search and replace for the command line",
  "main": "index.js",
  "bin": {
    "sr": "./lib/cli.js"
  },
  "scripts": {
    "build": "babel -d lib src --ignore=**/__tests__/**",
    "lint": "eslint . && ./node_modules/.bin/flow src",
    "prepublish": "yarn run test && yarn run build",
    "prepush": "sh helpers/gitHooks/prepush.sh",
    "test": "jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:travis": "yarn run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "watch": "yarn run build -- --watch"
  },
  "author": "Ignacio Carbajo <icarbarbajop@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^2.1.0",
    "commander": "^2.11.0",
    "inquirer": "^3.3.0",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "flow-bin": "^0.56.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "__tests__"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "cobertura"
    ],
    "roots": [
      "src"
    ],
    "globals": {
      "__TEST__": true
    },
    "moduleNameMapper": {
      "^.+\\.(png|jpg|gif|css|scss|svg)$": "<rootDir>/helpers/tests/fileMock.js"
    },
    "resetMocks": true,
    "setupTestFrameworkScriptFile": "<rootDir>/helpers/tests/setupTests.js",
    "testRegex": "(/__tests__/.*|(\\.|/))\\.test\\.js$"
  }
}
